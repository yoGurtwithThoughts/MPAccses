<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="StatusTask" TargetType="Border">
        <Setter Property="Width" Value="1230"/>
        <Setter Property="Height" Value="80"/>
        <Setter Property="Background" Value="#1E1E1E"/>
        <Setter Property="Opacity" Value="0.45"/>
    </Style>
    <Style x:Key="StatusData" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#8A9E9C"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/MPAccses;component/MVVM/Assets/Fonts/#Jura"/>
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,0"/>
    </Style>
</ResourceDictionary>