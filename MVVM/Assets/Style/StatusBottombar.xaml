<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BottomBarStyle" TargetType="DockPanel">
        <Setter Property="Background" Value="#3A3A3A"/>
        <Setter Property="Opacity" Value="0.75"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>

    <Style x:Key="BottomBarTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#8A9E9C"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/MPAccses;component/MVVM/Assets/Fonts/#Jura"/>
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,0"/>
    </Style>
</ResourceDictionary>